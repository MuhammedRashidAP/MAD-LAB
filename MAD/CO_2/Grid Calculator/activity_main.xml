<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_columnSpan="4"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#CCCCFF"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/textView"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="368dp"
            android:layout_height="69dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/C"
            android:layout_width="373dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:backgroundTint="#000066"
            android:gravity="center"
            android:text="C"
            android:textSize="20sp"
            />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="260dp"
            android:layout_gravity="center"
            app:columnCount="4"
            app:orientation="horizontal"
            app:rowCount="5"
            app:useDefaultMargins="true">

            <Button
                android:id="@+id/b7"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#000066"
                android:text="7"
                android:textSize="20sp"
                app:layout_column="0"
                app:layout_row="1" />

            <Button
                android:id="@+id/b8"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#000066"
                android:text="8"
                android:textSize="20sp"
                app:layout_column="1"
                app:layout_row="1" />

            <Button
                android:id="@+id/b9"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#000066"
                android:text="9"
                android:textSize="20sp"
                app:layout_column="2"
                app:layout_row="1" />

            <Button
                android:id="@+id/b4"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#000066"
                android:text="4"
                android:textSize="20sp"
                app:layout_column="0"
                app:layout_row="2" />

            <Button
                android:id="@+id/b5"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#000066"
                android:text="5"
                android:textSize="20sp"
                app:layout_column="1"
                app:layout_row="2" />

            <Button
                android:id="@+id/b6"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#000066"
                android:text="6"
                android:textSize="20sp"
                app:layout_column="2"
                app:layout_row="2" />

            <Button
                android:id="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#000066"
                android:text="1"
                android:textSize="20sp"
                app:layout_column="0"
                app:layout_row="3" />

            <Button
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#000066"
                android:text="2"
                android:textSize="20sp"
                app:layout_column="1"
                app:layout_row="3" />

            <Button
                android:id="@+id/b3"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#000066"
                android:text="3"
                android:textSize="20sp"
                app:layout_column="2"
                app:layout_row="3" />

            <Button
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#000066"
                android:text="+"
                android:textSize="20sp"
                app:layout_column="3"
                app:layout_row="1" />

            <Button
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#000066"
                android:text="-"
                android:textSize="20sp"
                app:layout_column="3"
                app:layout_row="2" />

            <Button
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#000066"
                android:text="*"
                android:textSize="20sp"
                app:layout_column="3"
                app:layout_row="3" />

            <Button
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#000066"
                android:text="."
                android:textSize="20sp"
                app:layout_column="0"
                app:layout_row="4" />

            <Button
                android:id="@+id/b0"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#000066"
                android:text="0"
                android:textSize="20sp"
                app:layout_column="1"
                app:layout_row="4" />

            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#000066"
                android:text="="
                android:textSize="20sp"
                app:layout_column="2"
                app:layout_row="4" />

            <Button
                android:id="@+id/slash"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:backgroundTint="#000066"
                android:text="/"
                android:textSize="20sp"
                app:layout_column="3"
                app:layout_row="4" />
        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>